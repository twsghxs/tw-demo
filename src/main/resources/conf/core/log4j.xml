<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j='http://jakarta.apache.org/log4j/'>

	<!-- 控制台输出 -->
	<appender name="stdout" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %p [%c] - %m%n"/>
		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMin" value="INFO" />
		</filter>
	</appender>
	
	<!-- 系统启动日志输出文件 -->
    <appender name="fileAppender" class="com.elong.house.feedback.common.DayRollingFileAppender">
		<param name="File" value="${catalina.home}/logs/system_error.log"/>
		<param name="DatePattern" value="'.'yyyy-MM-dd"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %p [%c] - %m%n"/>
		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMin" value="ERROR" />
		</filter>
	</appender>
	<!--actionLogEntity appender -->
	<appender name="actionLogEntityAppender" class="com.elong.common.util.log.ElongDailyRollingFileAppender">
		<param name="File" value="${catalina.home}/logs/house-feedback_actionlogentity.log"/>
		<param name="DatePattern" value="'.'yyyy-MM-dd-HH-mm"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%m%n"/>
	    </layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMin" value="INFO" />
		</filter>
	</appender>
 	
 	
 	<appender name="analysisAppender" class="com.elong.house.feedback.common.DayRollingFileAppender">
		<param name="File" value="${catalina.home}/logs/analysis_controller.log"/>
		<param name="DatePattern" value="'.'yyyy-MM-dd"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %p [%c] - %m%n"/>
		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMin" value="INFO" />
		</filter>
	</appender>
 	
 	<category name="com.elong.house.feedback.web.AnalysisController" additivity="false">
		<level value="INFO" />
		<appender-ref ref="analysisAppender" />
		<appender-ref ref="fileAppender" />
	</category>
 	
 	<category name="healthcheck" additivity="false">
		<level value="INFO" />
	</category>
 	
	<category name="actionLogEntityLogger" additivity="false">
		<level value="INFO"/>
		<appender-ref ref="actionLogEntityAppender" />  
	</category>
	
	<root>
	  <level value="DEBUG"/>
	  <appender-ref ref="stdout"/>
	  <appender-ref ref="fileAppender"/>
	</root>
	
</log4j:configuration>
